<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.appbuscapessoa.OpcaoActivity">

    <TextView
        android:id="@+id/lblOpcao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="OPÇÕES DE BUSCA"
        android:textAlignment="center"
        android:textColor="#0B0B0B"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblIdentificacao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="BUSCA IDENTIFICADA"
        android:textAlignment="center"
        android:textColor="#0C0C0C"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/lblOpcao"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/imgIdentificacao"
        android:layout_width="205dp"
        android:layout_height="171dp"

        android:layout_marginStart="100dp"
        android:layout_marginTop="28dp"
        android:onClick="abrirFormularioIdentificacao"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblIdentificacao"
        app:srcCompat="@drawable/documento" />

    <TextView
        android:id="@+id/lblCaracteristicas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="NÃO IDENTIFICADA"
        android:textAlignment="center"
        android:textColor="#080808"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/imgIdentificacao"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/imgCaracteristicas"
        android:layout_width="205dp"
        android:layout_height="175dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="32dp"
        android:onClick="abrirFormularioBuscaCaracteristicas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblCaracteristicas"
        app:srcCompat="@drawable/caracteristicas" />

</androidx.constraintlayout.widget.ConstraintLayout>